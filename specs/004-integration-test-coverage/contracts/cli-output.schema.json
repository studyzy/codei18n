{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CodeI18n Scan Output",
  "description": "Schema for the JSON output of 'codei18n scan --format json'",
  "type": "object",
  "required": ["comments"],
  "properties": {
    "file": {
      "type": "string",
      "description": "The path of the scanned file"
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "file", "language", "symbol", "range", "sourceText", "type"],
        "properties": {
          "id": { "type": "string" },
          "file": { "type": "string" },
          "language": { "type": "string" },
          "symbol": { "type": "string" },
          "sourceText": { "type": "string" },
          "localizedText": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["line", "block", "doc"]
          },
          "range": {
            "type": "object",
            "required": ["startLine", "startCol", "endLine", "endCol"],
            "properties": {
              "startLine": { "type": "integer", "minimum": 1 },
              "startCol": { "type": "integer", "minimum": 1 },
              "endLine": { "type": "integer", "minimum": 1 },
              "endCol": { "type": "integer", "minimum": 1 }
            }
          }
        }
      }
    }
  }
}
